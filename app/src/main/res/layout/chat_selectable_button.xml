<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:clickable="true"
android:onClick="poop"
android:background="@android:drawable/btn_default"
android:layout_width="wrap_content"
android:layout_height="100dp">
<ImageView
    android:id="@+id/contact_selectable_picture"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:src="@drawable/dogo"
    android:layout_width="wrap_content"
    android:layout_height="100dp" >
</ImageView>
<TextView
    android:id="@+id/contact_selectable_name"
    android:text="My friend dogo"
    android:textAppearance="?android:attr/textAppearanceButton"
    android:layout_toRightOf="@id/contact_selectable_picture"
    android:layout_centerVertical="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"></TextView>
</RelativeLayout>
